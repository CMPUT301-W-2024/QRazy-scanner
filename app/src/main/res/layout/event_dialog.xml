<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@android:color/white"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/dialog_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:fontFamily="@font/bold1"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/dialog_event_organizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizer"
            android:fontFamily="@font/light"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/dialog_event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:fontFamily="@font/light"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/event_delete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:fontFamily="@font/light"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="?attr/colorButtonNormal"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/dialog_event_close_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Close"
                android:fontFamily="@font/light"
                android:textColor="@android:color/white"
                android:elevation="2dp"
                android:background="?attr/colorButtonNormal" />

            <Button
                android:id="@+id/dialog_event_sign_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="Sign Up"
                android:textColor="@android:color/white"
                android:elevation="2dp"
                android:background="?attr/colorButtonNormal" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
